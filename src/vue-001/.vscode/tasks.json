{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "npm run dev",
        "type": "shell",
        "command": "npm run dev",
        "isBackground": true,
        "options": {
          "shell": {
            "executable": "cmd.exe",
            "args": ["/d", "/c"]
          }
        },
        "problemMatcher": {
          "base": "$tsc-watch",
          "background": {
            "activeOnStart": true,
            "beginsPattern": "vite v\\d+",
            "endsPattern": "ready in .*"
          }
        }
      }
    ]
  }